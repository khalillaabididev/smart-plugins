{
  "description": "Safety hooks for pr-patrol: blocks force push and protects state files",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/block-force-push.sh"
          }
        ]
      },
      {
        "matcher": "Bash|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/protect-state-file.sh"
          }
        ]
      }
    ]
  }
}
